			</ScrollView>
		</ContentPage>

		<ContentPage Title="Frame">
			<Frame OutlineColor="Red">
				<Label Text="I've been framed!"
						HorizontalOptions="Center"
						VerticalOptions="Center" />
			</Frame>
		</ContentPage>

	</TabbedPage.Children>
</TabbedPage>
